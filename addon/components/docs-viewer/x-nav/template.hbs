{{#if (or media.isMobile media.isTablet)}}
  <div class='docs-text-right docs-px-4 docs-mt-4'>
    <button {{action (toggle 'isShowingMenu' this)}}
      class='docs-text-grey-darkest docs-py-2 docs-text-xs docs-rounded docs-uppercase docs-font-medium'>
      â˜° Menu
    </button>
  </div>
{{/if}}

<div class="AddonDocs-DocsViewer-Nav docs-bg-grey-lightest docs-border-r docs-flex-no-shrink">
  <nav onclick={{action (mut isShowingMenu) false}}
    class='
      docs-absolute docs-pin-r lg:docs-relative docs-shadow-lg lg:docs-shadow-none docs-mr-2 lg:docs-mr-0
      docs-max-w-xs docs-w-90% lg:docs-w-72 docs-z-10 docs-transition lg:docs-sticky lg:docs-pin-t
      {{if (or media.isMobile media.isTablet)
        (if isShowingMenu 'docs-opacity-100 docs-bg-white' 'docs-opacity-0 docs-pointer-events-none')
      }}
    '>
    <div class='docs-pt-px docs-mb-8 docs-px-3 lg:docs-px-4 lg:docs-max-h-screen lg:docs-overflow-y-scroll'>
      {{#if (or media.isMobile media.isTablet)}}
        <div class="docs-text-right">
          <button onclick={{action (mut isShowingMenu) false}}
            class='docs-text-grey-darkest docs-opacity-50 hover:docs-opacity-100 docs-text-3xl docs-py-2 docs-no-underline'>
            &times;
          </button>
        </div>
      {{/if}}

      {{#docs-viewer/x-nav-list}}
        {{yield (hash
          section=(component 'docs-viewer/x-section')
          item=(component 'docs-viewer/x-nav-item')
          subnav=(component 'docs-viewer/x-nav-list' class='ml-4')
        )}}

        {{!-- Autogenerated API docs --}}
        {{#if (gt project.modules.length 0)}}
          {{docs-viewer/x-section 'API Reference' style='large'}}

          {{#each-in project.navigationIndex as |type items|}}
            {{docs-viewer/x-section type}}

            {{#each items as |item|}}
              {{docs-viewer/x-nav-item (break-on item.name '/') (concat root '.api.item') item.path}}
            {{/each}}
          {{/each-in}}
        {{/if}}
      {{/docs-viewer/x-nav-list}}

      <div class="docs-mt-16 lg:docs-mb-16 docs-mr-2 docs-text-xxs docs-rounded">
        <a href="https://github.com/ember-learn/ember-cli-addon-docs"
          class='docs-opacity-50 hover:docs-opacity-100 docs-transition docs-no-underline
          docs-text-inherit docs-flex docs-items-center docs-text-grey-darkest'>
          {{svg-jar 'addon-docs-pen' width=22 height=16 class='docs-mr-2'}}
          <div>
            Powered by
            <span class="docs-font-bold">AddonDocs</span>
          </div>
        </a>
      </div>
    </div>
  </nav>
</div>
