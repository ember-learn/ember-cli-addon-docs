<DocsViewer::XNavList @class="docs-ml-4" as |subnav|>
  <DocsViewer::XSection @style="subsection">
    {{this.node.name}}
  </DocsViewer::XSection>

  {{#each this.node.children as |child|}}
    {{#if child.children}}
      <DocsViewer::XAutogeneratedApiDocs::ModuleNav @node={{child}} @root={{root}} />
    {{else}}

      {{subnav.item child.name (concat root ".api.item") (concat "modules/" child.id)}}
    {{/if}}
  {{/each}}
</DocsViewer::XNavList>
