<li class='mt-2 mb-1 flex items-center text-sm'>
  {{#if model}}
    {{#link-to route model
      class='text-grey-darkest no-underline hover:underline'
      activeClass='font-bold'
      data-test-id='nav-item'
      data-test-label=label}}
      {{label}}
    {{/link-to}}
  {{else}}
    {{#link-to route
      class='text-grey-darkest no-underline hover:underline'
      activeClass='font-bold'
      data-test-id='nav-item'
      data-test-label=label}}
      {{label}}
    {{/link-to}}
  {{/if}}
</li>
